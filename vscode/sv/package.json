{
    "name": "crowned",
    "displayName": "Crowned",
    "description": "SystemVerilog Linter and Formatter with Verible",
    "version": "0.0.1",
    "publisher": "gasrodriguez",
    "author": {
        "name": "Gast√≥n Rodriguez",
        "email": "gastonerodriguez@gmail.com"
    },
    "license": "MIT",
    "categories": [
        "Programming Languages",
        "Snippets",
        "Linters",
        "Formatters"
    ],
    "keywords": [
        "verilog",
        "systemverilog",
        "lsp",
        "hdl"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/gasrodriguez/crowned"
    },
    "activationEvents": [
        "onLanguage:systemverilog",
        "onLanguage:verilog"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": [
            {
                "title": "Crowned",
                "properties": {
                    "crowned.serverCommand": {
                        "type": "string",
                        "default": "crowned-lang-sv",
                        "description": "SV language server command"
                    }
                }
            }
        ],
        "languages": [
            {
                "id": "systemverilog",
                "aliases": [
                    "SystemVerilog",
                    "systemverilog",
                    "System Verilog",
                    "Systemverilog"
                ],
                "extensions": [
                    ".sv",
                    ".svh"
                ],
                "configuration": "./grammars/language-configuration.json"
            },
            {
                "id": "verilog",
                "aliases": [
                    "Verilog",
                    "verilog"
                ],
                "extensions": [
                    ".v",
                    ".vh"
                ],
                "configuration": "./grammars/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "systemverilog",
                "scopeName": "source.systemverilog",
                "path": "./grammars/systemverilog.tmLanguage.json"
            },
            {
                "language": "verilog",
                "scopeName": "source.systemverilog",
                "path": "./grammars/systemverilog.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "engines": {
        "vscode": "^1.52.0"
    },
    "dependencies": {
        "esnext": "^3.3.1",
        "glob": "^7.1.7",
        "vscode-languageclient": "^6.1.3"
    },
    "devDependencies": {
        "@types/vscode": "1.52.0",
        "vscode-test": "^1.4.1",
        "@types/glob": "7.1.3",
        "@types/mocha": "^8.2.0",
        "mocha": "^8.2.1",
        "@types/node": "^14.14.13",
        "eslint": "^7.16.0",
        "@typescript-eslint/parser": "^4.10.0",
        "esnext": "^4.1.2",
        "typescript": "^4.1.2"
    }
}
